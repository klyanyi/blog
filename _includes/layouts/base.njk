<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header class="header">
      <nav class="nav">
        <h1 class="logo">
          <a href="{{ '/' | url }}">{{ metadata.title }}</a>
        </h1>
        <ul class="menu">
          {%- for entry in collections.all | eleventyNavigation %}
            <li>
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    </header>

    <main class="main">
      {{ content | safe }}
    </main>

    <footer class="footer">
      <span>&copy; 2021 <a href="{{ '/' | url }}">{{ metadata.title }}</a>
      </span>
      <span>&middot;</span>
      <span>Powered by <a href="https://www.11ty.dev/" rel="noopener" target="_blank">Eleventy</a>️</span>
      <span>&middot;</span>
      <span>Theme️ <a href="https://github.com/nanxiaobei/hugo-paper" rel="noopener" target="_blank">Paper</a>
      </span>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>